package mySwitch;

import java.util.Scanner;

public class MarksSwitchStatement {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int marks;
		
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Enter your marks: ");
		marks= scan.nextInt();
		
		
		
		switch(marks/10) { // is not valid if divided by 100
							// must divided by 10 to get the real number
		
		case 10:
		case 9:
			System.out.println("Excellent:Grade A");
			break;
		case 8:
			System.out.println("Very Good : Grade B");
			break;
		case 7:
			System.out.println("Good : Grade C");
			break;
		case 6:
			System.out.println("Good : Grade D");
			break;
		case 5:
			System.out.println("Good : Grade E");
			break;
		case 4:
			System.out.println("Just Passed : Grade F");
			break;
		default:
			System.out.println("Failed!");
			
			
			
			
		}
	}

}
